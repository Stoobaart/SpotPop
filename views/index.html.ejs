<!DOCTYPE html>
<html lang="en" ng-app="SpotPop">
<head>
  <meta charset="UTF-8">
  <title>SpotPop</title>

  <script src='//maps.googleapis.com/maps/api/js?sensor=false'></script>
  <script src="https://www.youtube.com/iframe_api"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-resource/1.6.2/angular-resource.js"></script>
  <script src="https://www.gstatic.com/firebasejs/3.6.6/firebase.js"></script>
  <script src="https://cdn.firebase.com/libs/angularfire/2.3.0/angularfire.min.js"></script>

	<script src='lib/lodash/dist/lodash.js' type="text/javascript"></script>
	<script src='lib/angular-google-maps/dist/angular-google-maps.js' type="text/javascript"></script>
	<script src='lib/angular-simple-logger/dist/angular-simple-logger.js' type="text/javascript"></script>

	
	<script src="lib/angular-youtube-embed/dist/angular-youtube-embed.js"></script>
	<script src="lib/angular-youtube-mb/dist/angular-youtube-embed.min.js"></script>

  <script src="/js/app.js"></script>

  <script type="text/javascript" src="js/factories/user.fact.js"></script>
  <script type="text/javascript" src="js/factories/auth.fact.js"></script>
  <script type="text/javascript" src="js/factories/spot.fact.js"></script>
  <script type="text/javascript" src="js/controllers/spots.ctrl.js"></script>
  <script type="text/javascript" src="js/controllers/auth.ctrl.js"></script>
  <script type="text/javascript" src="js/controllers/users.ctrl.js"></script>
  <script type="text/javascript" src="js/controllers/maps.ctrl.js"></script>
  <script type="text/javascript" src="js/controllers/videos.ctrl.js"></script>


  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/style.css">

</head>
<body ng-controller="authenticationController as auth">
	<header>
		<h1>SPOT POP</h1>
		<img id="logo" src="images/SpotPopLogo.png">
		<p class="welcomeUserMsg">Welcome, {{ auth.user.email }}</p>
	</header>

	<nav>
		<ul>
			<li><a ui-sref="home">Home</a></li>
			<li ng-if="!auth.user"><a class="btn" href="#" ui-sref="login">Log In</a></li>
			<li ng-if="!auth.user"><a href="#" ui-sref="signin">Sign Up</a></li>
			<li ng-if="auth.user"><a href="#" ng-click="auth.signOut()">Log Out</a></li>
			<li ng-if="auth.user"><a ui-sref="my-profile">My Profile</a></li>
			<li ng-if="auth.user"><a ui-sref="my-spots">My Spots</a></li>
			<li ng-if="auth.user"><a ui-sref="spots">All Spots</a></li>
			<li ng-if="auth.user"><a ui-sref="friends">Community</a></li>
		</ul>	
	</nav>

	<section class="states" ui-view ng-controller="SpotsController as spot"></section>

<footer>
	<ul>
		<p id="footerLogoTitle">SPOT POP</p>
		<img id="footerLogo" src="images/SpotPopLogo.png">
		<li>Copy right </li>
	</ul>
</footer>

</body>
</html>